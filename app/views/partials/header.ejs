    box-shadow: 0 0.625rem 1.875rem rgba(243, 242, 245, 0.3);
    border: double 0.125rem transparent;
    padding: 0 2.0625rem;
    transition: all .3s ease-in-out;
    --webkit-transition: all .3s ease-in-out;
}

.primary-btn {
   background-color: black;
   color: white;
}

.secondary-btn {
   background-color: black;
   color: white;
}
.primary-btn:hover {
    box-shadow: none;
    border-color: white;
    
}

.secondary-btn:hover {
    box-shadow: none;
    border-color:white;
}


