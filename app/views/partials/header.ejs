}

.banner_wrapper .banner-content h2::after {
    content: '';
    width: 60%;
    height: 0.125rem;
    position: absolute;
    top: 50%;
    left: 25%;
    background: #000;
    overflow-x: hidden;
}


.main-btn {
    display: inline-block;
